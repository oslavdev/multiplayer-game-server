{
  "name": "multiplayer-game-server",
  "license": "MIT",
  "author": "Jaroslaw Grishunin",
  "devDependencies": {
    "@types/jest": "^29.2.1",
    "@types/node": "16.11.26",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.26.0",
    "get-port": "5.1.1",
    "graphql-request": "^5.0.0",
    "husky": "^8.0.1",
    "jest": "^29.2.2",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "prisma": "^4.5.0",
    "ts-jest": "^29.0.3",
    "ts-node": "10.7.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "4.6.3"
  },
  "scripts": {
    "dev": "ts-node-dev --transpile-only --no-notify api/index.ts",
    "build": "tsc",
    "generate": "ts-node --transpile-only api/schema",
    "test": "npm run generate && jest",
    "lint": "eslint . --ext .ts",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "prepare": "husky install"
  },
  "dependencies": {
    "@prisma/client": "^4.5.0",
    "apollo-server": "^3.10.3",
    "graphql": "^16.6.0",
    "nexus": "^1.3.0",
    "nexus-prisma": "^0.35.0"
  },
  "engines": {
    "node": ">=12.2.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --ext .ts",
      "prettier --write"
    ],
    "*.ts": [
      "eslint . --ext .ts",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "warnOnly": true
        }
      }
    },
    "testEnvironment": "node"
  }
}
